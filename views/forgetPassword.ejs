<%- include('./includes/head.ejs') %>

<body>

    <header class="header">
        <div class="header-inner">
          <div class="container-fluid">
            <nav class="navbar bg-light fixed-top">
              <div class="container-fluid mb-1 justify-content-center display-6">
                <b>Forget Password</b>
              </div>
            </nav>
          </div>
        </div>
      </header>
    
      <section>
        <div class="container mb-5">
          <div
            class="row justify-content-center"
            style="height: 200px; margin-top: 60px"
          >
            <div class="col-xxl text-center">
              <img
                src="https://i.ibb.co/DVR5rLp/home-title1.jpg"
                class="img-fluid"
                width="260px"
              />
            </div>
          </div>
        </div>
      </section>

      <section>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl">
                    <form action="/user/forgetPsword" method="POST">

                        <div class="input-group mb-1">
                            <span class="input-group-text bg-transparent border-0" style="opacity: 0.4;">
                              <img
                                src="https://i.ibb.co/Z8G4hfg/email.png"
                                class="img-fluid"
                                width="40px"
                              />
                            </span>
                            <input
                              type="email"
                              class="form-control border-0"
                              name="email"
                              placeholder="Email"
                              required
                            />
                        </div>

                          <div class="input-group mb-1">
                            <span class="input-group-text bg-transparent border-0">
                              <img
                                src="https://i.ibb.co/F3FjNK0/code.png"
                                class="img-fluid"
                                width="40px"
                              />
                            </span>
                            <input
                              type="email"
                              class="form-control border-0"
                              name="emailCode"
                              placeholder="Email-Code"
                            />
                            <a href="/" style="text-decoration: none;">Get Code</a>
                          </div>

                          <div class="input-group mb-1">
                            <span class="input-group-text bg-transparent border-0">
                              <img src="https://i.ibb.co/NnVQdWh/password.png" class="img-fluid" width="40px">
                            </span>
                            <input type="password" class="form-control border-0" name="psword" placeholder="Password">
                          </div>
              
                          <div class="input-group mb-2">
                            <span class="input-group-text bg-transparent border-0">
                              <img src="https://i.ibb.co/NnVQdWh/password.png" class="img-fluid" width="40px">
                            </span>
                            <input type="password" class="form-control border-0" name="cpsword" placeholder="Confirm password">
                          </div>

                          <div class="d-grid">
                            <button type="submit" class="btn btn-secondary text-white mb-2">Submit</button>
                          </div>

                    </form>
                </div>
            </div>
        </div>
      </section>
    
<%- include('./includes/end.ejs') %>